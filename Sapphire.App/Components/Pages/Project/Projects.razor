@using Size = MudBlazor.Size
@inherits DatabaseRefresh
@page "/"
@page "/project"

<WindowLayout>
    <ToolbarLeftContent>
        <CurrentDatabase />
    </ToolbarLeftContent>
    <ToolbarRightContent>
        <WindowControls/>
    </ToolbarRightContent>
    <ChildContent>
        <MudContainer Class="my-10">
            <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-3">
                <MudText Typo="Typo.h3">Projects</MudText>

                <MudStack Row="true" Spacing="1">
                    <MudButton OnClick="() => ViewWorkers()" Variant="Variant.Outlined" Size="Size.Small">View Workers</MudButton>
                    <MudButton OnClick="() => CreateProject()" Variant="Variant.Outlined" Size="Size.Small">Create Project</MudButton>
                </MudStack>
            </MudStack>

            <MudGrid Spacing="1">
                @foreach (var project in _projects)
                {
                    <MudItem sm="12">
                        <MudPaper Outlined="true" Class="p-3">
                            <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                                <MudStack Row="false" Spacing="1">
                                    <MudText Typo="Typo.h4">@project.Name</MudText>
                                    <MudText Typo="Typo.subtitle1">@project.Description @project.Deadline @project.Id</MudText>
                                </MudStack>

                                <MudStack Row="true" Spacing="1">
                                    <MudButton Size="Size.Small" OnClick="() => ViewProject(project.Id)" Variant="Variant.Outlined">View</MudButton>
                                </MudStack>
                            </MudStack>
                        </MudPaper>
                    </MudItem>
                }
            </MudGrid>
        </MudContainer>
    </ChildContent>
</WindowLayout>

@code {
    [Inject] public required NavigationManager NavigationManager { get; set; }

    private List<ProjectAggregate> _projects = [];

    protected override void OnLoadData()
    {
        _projects = Database.Enumerate<ProjectAggregate>().ToList();
    }

    private void CreateProject()
    {
        var project = new ProjectAggregate
        {
            Name = "Project 1"
        };

        Database.Update(project);
    }

    private void ViewProject(Guid id)
    {
        NavigationManager.NavigateTo($"/project/{id}");
    }

    private void ViewWorkers()
    {
        NavigationManager.NavigateTo("/worker");
    }

}