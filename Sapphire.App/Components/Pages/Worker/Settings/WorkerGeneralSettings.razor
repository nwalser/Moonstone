<MudGrid Spacing="1">
    <MudItem sm="12">
        <MudPaper Outlined="true" Class="pa-3">
            <MudTextField T="string" Value="@Worker.Name" ValueChanged="NameChanged" Margin="0" Immediate="false" Label="Name" />
        </MudPaper>
    </MudItem>
    <MudItem sm="12">
        <MudPaper Outlined="true" Class="pa-3">
            <MudTextField T="string" Value="@Worker.Abbreviation" ValueChanged="AbbreviationChanged" Margin="0" Immediate="false" Label="Abbreviation" />
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    [CascadingParameter] public required ProjectDatabase Database { get; set; }

    [Parameter] public required WorkerAggregate Worker { get; set; }

    private async void NameChanged(string name)
    {
        Worker.Name = name;
        Database.Update(Worker);
    }
    
    private async void AbbreviationChanged(string abbreviation)
    {
        Worker.Abbreviation = abbreviation;
        Database.Update(Worker);
    }
}