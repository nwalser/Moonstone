@page "/"
@using Size = MudBlazor.Size

<DefaultWindowLayout>
    <MudContainer Class="my-10">
        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-3">
            <MudText Typo="Typo.h3">Projects</MudText>

            <MudStack Row="true" Spacing="1">
                <MudButton Variant="Variant.Outlined" Size="Size.Small">Create Project</MudButton>
            </MudStack>
        </MudStack>

        <MudGrid Spacing="1">
            <MudItem sm="12">
                <MudPaper Outlined="true" Class="p-3">
                    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                        <MudStack Row="false" Spacing="1">
                            <MudText Typo="Typo.h4">Space</MudText>
                            <MudText Typo="Typo.subtitle1">Show information about workspace</MudText>
                        </MudStack>

                        <MudStack Row="true" Spacing="1">
                            <MudButton Size="Size.Small" Variant="Variant.Outlined">View</MudButton>
                        </MudStack>
                    </MudStack>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudContainer>
</DefaultWindowLayout>

