@inherits LayoutComponentBase

<FluentToastProvider/>
<FluentDialogProvider/>
<FluentTooltipProvider/>
<FluentMessageBarProvider/>
<FluentDesignTheme StorageName="light" Mode="DesignThemeModes.Dark" OfficeColor="OfficeColor.Outlook"/>

<div class="flex flex-col h-full">
    <Toolbar />
    <main class="flex-grow overflow-auto">
        <CascadingValue TValue="ProjectDatabase?" IsFixed="true" Value="DatabaseManager.Database">
            <ErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent>
                    <p class="errorUI">There was an error</p>
                </ErrorContent>
            </ErrorBoundary>
        </CascadingValue>
    </main>
</div>


@code{
    [Inject] public required DatabaseManager<ProjectDatabase> DatabaseManager { get; set; }
}