@page "/counter"

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<MudButton Variant="Variant.Outlined" class="btn btn-primary" @onclick="IncrementCount">Click me</MudButton>

@code {
    private int currentCount = 0;

    protected override void OnInitialized()
    {
        var temp = Path.GetTempPath();
        var path = Path.Join(temp, "counter.json");

        if (File.Exists(path))
        {
            var json = File.ReadAllText(path);
            currentCount = System.Text.Json.JsonSerializer.Deserialize<int>(json);
        }
        
        base.OnInitialized();
    }

    private void IncrementCount()
    {
        currentCount++;

        var temp = Path.GetTempPath();
        var json = System.Text.Json.JsonSerializer.Serialize(currentCount);
        File.WriteAllText(Path.Join(temp, "counter.json"), json);
    }
}
